{
  "name": "node-starter-kit",
  "version": "1.0.0",
  "description": "Node Starter Kit for Express projects",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:ndminhdev/node-starter.git"
  },
  "keywords": [
    "nodejs",
    "node starter",
    "nodejs boilerplate",
    "babel",
    "eslint",
    "prettier"
  ],
  "author": "Dang Minh <ndminhdev@gmail.com>",
  "license": "ISC",
  "scripts": {
    "build": "babel src --out-dir dist",
    "start": "nodemon --exec babel-node src/server.js",
    "test": "mocha --require @babel/register __tests__/**/*.spec.js",
    "serve": "node dist/server.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "bcrypt": "^5.0.1",
    "cloudinary": "^1.25.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.1",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "redis": "^3.1.2",
    "streamifier": "^0.1.1",
    "winston": "^3.3.3",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.12",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/register": "^7.13.8",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.22.0",
    "eslint-plugin-mocha": "^8.1.0",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "{src,__{tests,mocks}__}/**/*.js": "prettier --write"
  }
}
